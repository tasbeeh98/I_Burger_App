<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:background="@drawable/done"
    tools:context=".Confirm">

    <com.google.android.material.navigation.NavigationView

        android:layout_width="wrap_content"
        android:layoutDirection="rtl"
        android:textDirection="rtl"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:background="@drawable/menu"
        android:foregroundTint="#00000000"
        app:menu="@menu/menu"
        android:fitsSystemWindows="true"
        app:itemTextColor="@color/black"
        android:layout_gravity="end"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/folder"
            android:layout_width="77dp"
            android:layout_height="85dp"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/files_and_folders" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="55dp"
            android:layout_height="46dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="C O N F I R M"
            android:textColor="#EED669"
            app:layout_constraintStart_toEndOf="@+id/back"
            app:layout_constraintTop_toTopOf="@+id/back" />

        <ImageView
            android:id="@+id/imageView27"
            android:layout_width="341dp"
            android:layout_height="398dp"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView22"
            app:srcCompat="@drawable/yellow" />

        <ImageView
            android:id="@+id/imageView25"
            android:layout_width="192dp"
            android:layout_height="194dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView27"
            app:layout_constraintStart_toStartOf="@+id/imageView27"
            app:layout_constraintTop_toTopOf="@+id/imageView27"
            app:srcCompat="@drawable/iburger_logo_big" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>