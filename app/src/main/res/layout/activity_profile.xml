<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:background="@drawable/background"
    tools:context=".Profile">

    <com.google.android.material.navigation.NavigationView

        android:layout_width="wrap_content"
        android:layoutDirection="rtl"
        android:textDirection="rtl"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:background="@drawable/menu"
        android:foregroundTint="#00000000"
        app:menu="@menu/menu"
        android:fitsSystemWindows="true"
        app:itemTextColor="@color/black"
        android:layout_gravity="end"/>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/folder"
        android:layout_width="77dp"
        android:layout_height="85dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/files_and_folders" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="P R O F I L E"
        android:textColor="#EED669"
        app:layout_constraintStart_toEndOf="@+id/back"
        app:layout_constraintTop_toTopOf="@+id/back" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="55dp"
        android:layout_height="46dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="186dp"
        android:layout_height="179dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView22"
        app:srcCompat="@drawable/order_con" />

    <EditText
        android:id="@+id/fullName"
        android:layout_width="282dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonshape"
        android:hint="F U L L  N A M E"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <EditText
        android:id="@+id/phoneNumber"
        android:layout_width="282dp"
        android:layout_height="46dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/buttonshape"
        android:hint="P H O N E  N U M B E R"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullName" />

    <EditText
        android:id="@+id/location"
        android:layout_width="282dp"
        android:layout_height="46dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/buttonshape"
        android:hint="L O C A T I O N"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneNumber" />

    <EditText
        android:id="@+id/password"
        android:layout_width="282dp"
        android:layout_height="46dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/buttonshape"
        android:hint="P A S S W O R D"
        android:inputType="textEmailAddress"
        android:password="true"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location" />

    <EditText
        android:id="@+id/rePassword"
        android:layout_width="282dp"
        android:layout_height="46dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/buttonshape"
        android:hint="R E - P A S S W O R D"
        android:inputType="textEmailAddress"
        android:password="true"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />


    <TextView
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="S A V E"
        android:textColor="#dF5516"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rePassword" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.drawerlayout.widget.DrawerLayout>